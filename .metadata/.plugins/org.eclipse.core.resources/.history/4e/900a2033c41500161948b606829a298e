	            </result>
	            <result name="error">
	            	/admin/error.jsp
	            </result>
	        </action>
	        
	        <action name="Network-*" class="action.NetworkAction" method="{1}">
	       		<result name="success">/admin/content/network/Network-{1}.jsp</result>
